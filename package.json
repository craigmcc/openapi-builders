  "bugs": {
    "url": "https://github.com/craigmcc/openapi-builders/issues"
  },
  "homepage": "https://github.com/craigmcc/openapi-builders#readme",
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "chai": "^4.3.10",
    "mocha": "^10.1.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.8",
    "typedoc-theme-yaf": "^0.0.4",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "yaml": "^2.3.4"
  }
